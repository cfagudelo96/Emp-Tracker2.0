<%= form_for [training, training_execution] do |f| %>
  <% if training.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(training.errors.count, "error") %> no permitieron guardar la formación:</h2>

      <ul>
        <% training.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for training, training do |training_form| %>
    <div class="form-group">
      <%= training_form.label :category, 'Tipo' %>
      <%= training_form.select :category, options_for_select(Training::CATEGORIES, training.category.blank? || Training::CATEGORIES.include?(training.category) ? Training::CATEGORIES[0] : Training::CATEGORIES[3]), {}, { class: 'form-control', onchange: 'categoryChanged()' } %>
    </div>

    <div class="form-group" id="category_form_group" style="<%= 'display: none;' if training.category.blank? || Training::CATEGORIES.include?(training.category) %>">
      <%= training_form.label :category, '¿Cuál?' %>
      <input class="form-control" type="text" value="<%= training.category %>" <%= 'name=training[category]' unless training.category.blank? || Training::CATEGORIES.include?(training.category) %> id="training_category_other">
    </div>

    <div class="form-group">
      <%= training_form.label :topic, 'Tema' %>
      <%= training_form.text_field :topic, required: true, class: 'form-control' %>
    </div>

    <div class="form-group" id="objective_form_group">
      <%= training_form.label :objective, 'Objetivo' %>
      <%= training_form.text_area :objective, class: 'form-control', rows: 4 %>
    </div>

    <div class="form-group">
      <label style="display: block;">Responsable</label>
      <label class="radio-inline"><input type="radio" name="attendant" onchange="attendantChanged()" value="area" <%= 'checked' if training.area_id.present? || (training.area_id.blank? && training.collaborator_id.blank?) %>>Área</label>
      <label class="radio-inline"><input type="radio" name="attendant" onchange="attendantChanged()" value="collaborator" <%= 'checked' if training.collaborator_id.present? %>>Colaborador</label>
    </div>

    <div class="form-group" id="area_form_group" style="<%= 'display: none;' if training.collaborator_id.present? %>">
      <%= training_form.label :area_id, 'Área responsable' %>
      <%= training_form.collection_select :area_id, Area.all, :id, :name, { include_blank: 'Seleccionar área...' }, { class: 'form-control' } %>
    </div>

    <div class="form-group" id="collaborator_form_group" style="<%= 'display: none;' if training.area_id.present? || training.collaborator_id.blank? && training.area_id.blank? %>">
      <%= training_form.label :area_id, 'Colaborador responsable' %>
      <%= training_form.collection_select :collaborator_id, Employee.all, :id, :name, { include_blank: 'Seleccionar colaborador...' }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= training_form.label :company_id, 'Compañía' %>
      <%= training_form.collection_select :company_id, Company.all, :id, :name, {}, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= training_form.label :date, 'Fecha de realización' %>
      <div class="input-group date" id="datetimepicker">
        <%= training_form.text_field :date, required: true, value: training.date.present? ? training.date.strftime('%d/%m/%y %R') : '', class: 'form-control' %>
        <span class="input-group-addon">
          <%= fa_icon('calendar') %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= training_form.label :hourly_intensity, 'Intensidad horaria' %>
      <%= training_form.number_field :hourly_intensity, min: 0, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= training_form.label :trainer, 'Formador' %>
      <%= training_form.text_field :trainer, required: true, class: 'form-control' %>
    </div>

    <div class="checkbox">
      <%= training_form.label :internal do %>
        <%= training_form.check_box :internal %>Interno
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
    $(document).ready(function () {
        $('#datetimepicker').datetimepicker({
            locale: 'es'
        });
    })
</script>
