<h1>Formaciones ejecutadas</h1>

<div class="table-responsive margin-bottom">
  <table class="table table-striped">
    <tbody>
    <% @training_executions.each do |training_execution| %>
      <tr>
        <td>
          <p><%= training_execution %> (<%= training_execution.category %>)</p>
          <p><%= training_execution.date.strftime('%d/%m/%y %R') %></p>
        </td>
        <td>
          <span class="pull-right">
            <%= link_to training_execution, class: 'btn btn-info' do %>
              <%= fa_icon('info') %>
            <% end %>
            <%= link_to edit_training_execution_path(training_execution), class: 'btn btn-warning' do %>
              <%= fa_icon('pencil') %>
            <% end %>
            <%= link_to training_execution, method: :delete, data: { confirm: '¿Seguro que desea eliminar la formación?' }, class: 'btn btn-danger' do %>
              <%= fa_icon('trash') %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
    <% if @training_executions.empty? %>
      <tr>
        <td>
          No se encontraron registros
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to new_training_execution_path, class: 'btn btn-default' do %>
    <%= fa_icon('plus') %>
  <% end %>

  <%= link_to all_trainings_path, class: 'btn btn-default pull-right' do %>
    <%= fa_icon('eye') %> Todas las formaciones
  <% end %>
</div>

<%= will_paginate @training_executions %>
