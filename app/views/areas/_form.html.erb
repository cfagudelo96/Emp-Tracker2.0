<%= form_for(area) do |f| %>
  <% if area.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(area.errors.count, 'error') %> no permitieron guardar el área:</h2>

      <ul>
      <% area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= link_to areas_path, class: 'btn btn-default' do %>
      <%= fa_icon 'arrow-left' %> Áreas
    <% end %>
    <%= f.submit 'Guardar', class: 'btn btn-default pull-right' %>
  </div>
<% end %>
