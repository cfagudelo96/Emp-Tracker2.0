<h1>Áreas</h1>

<div class="margin-bottom">
  <%= form_tag areas_path, method: :get do %>
    <div class="form-group">
      <%= text_field_tag :name, params[:name], placeholder: 'Filtrar por nombre...', class: 'form-control' %>
    </div>
    <%= button_tag type: :submit, class: 'btn btn-default' do %>
      <%= fa_icon('search') %> Filtrar
    <% end %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td>
          <%= area %>
          <span class="pull-right">
            <%= link_to edit_area_path(area), class: 'btn btn-warning' do %>
              <%= fa_icon('pencil') %>
            <% end %>
            <%= link_to area, method: :delete, data: { confirm: '¿Seguro que desea eliminar el área?' }, class: 'btn btn-danger' do %>
              <%= fa_icon('trash') %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
    <% if @areas.empty? %>
      <tr>
        <td>
          No se encontraron registros
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to new_area_path, class: 'btn btn-default' do %>
    <%= fa_icon('plus') %> Agregar área
  <% end %>
</div>

<%= will_paginate @areas %>
