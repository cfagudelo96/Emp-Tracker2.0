<h4>Nombre</h4>
<p><%= @employee.name %></p>

<h4>Identificación</h4>
<p>C.C. <%= @employee.identification %></p>

<h4>Área</h4>
<p><%= Area.find(@employee.area_id) %></p>

<h4>Cargo</h4>
<p><%= @employee.position %></p>

<h4>Compañía</h4>
<p><%= Company.find(@employee.company_id) %></p>

<h4>Fecha de ingreso</h4>
<p><%= @employee.admission_date %></p>

<h4>Estado</h4>
<p><%= @employee.active ? 'Activo' : 'Inactivo' %></p>

<%= link_to employees_path, class: 'btn btn-primary' do %>
  Atras <%= fa_icon('arrow-left') %>
<% end %>
<%= link_to edit_employee_path(@employee), class: 'btn btn-primary pull-right' do %>
  Editar <%= fa_icon('pencil') %>
<% end %>
