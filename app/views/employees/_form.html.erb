<%= form_for(employee) do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(employee.errors.count, "error") %> no permitieron guardar el empleado:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :identification, 'Identificación' %>
    <%= f.number_field :identification, required: true, placeholder: 'Cédula de Ciudadanía', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :position, 'Posición' %>
    <%= f.text_field :position, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :area_id, 'Área' %>
    <%= f.collection_select :area_id, Area.all, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :company_id, 'Compañía' %>
    <%= f.collection_select :company_id, Company.all, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group" id="datepicker-container">
    <%= f.label :admission_date, 'Fecha de ingreso' %>
    <div class="input-group date">
      <%= f.text_field :admission_date, required: true, class: 'form-control' %>
      <span class="input-group-addon"><%= fa_icon('calendar') %></span>
    </div>
  </div>

  <div class="checkbox">
    <%= f.label :active do %>
      <%= f.check_box :active %> Activo
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
  $(document).ready(function () {
      $('#datepicker-container .input-group.date').datepicker({
          language: 'es',
          format: 'yyyy-mm-dd'
      });
  })
</script>
