<h1>Empleados</h1>

<div class="row margin-bottom">
  <%= form_tag employees_path, method: :get do %>
    <div class="col-xs-12 col-md-8">
      <div class="form-group" id="filters">
        <%= text_field_tag :name, params[:name], placeholder: 'Filtrar por...', class: 'form-control' if params[:filter].blank? || params[:filter] == 'name' %>
        <%= number_field_tag :identification, params[:identification], placeholder: 'Filtrar por...', class: 'form-control' if params[:filter] == 'identification' %>
        <%= text_field_tag :position, params[:position], placeholder: 'Filtrar por...', class: 'form-control' if params[:filter] == 'position' %>
        <%= select_tag :area_id, options_from_collection_for_select(Area.all, :id, :name, params[:area_id]), class: 'form-control' if params[:filter] == 'area_id' %>
        <%= select_tag :company_id, options_from_collection_for_select(Company.all, :id, :name, params[:company_id]), class: 'form-control' if params[:filter] == 'company_id' %>
      </div>
      <div class="checkbox">
        <label><%= check_box_tag :active, true, params[:active].present? %> Sólo empleados activos</label>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="form-group">
        <%= select_tag :filter, options_for_select(Employee::FILTER_OPTIONS, params[:filter]), onchange: 'employeesFilterChanged()', class: 'form-control' %>
      </div>
    </div>
    <div class="col-xs-12 col-md-1">
      <%= submit_tag 'Filtrar', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td>
          <h4><%= employee %> <%= raw '<small>(Inactivo)</small>' unless employee.active %></h4>
          <p><%= employee.area %> (<%= employee.position %>)</p>
          <p><%= employee.company %></p>
        </td>
        <td>
          <span class="pull-right">
            <%= link_to employee, class: 'btn btn-info' do %>
              <%= fa_icon('info') %>
            <% end %>
            <%= link_to edit_employee_path(employee), class: 'btn btn-warning' do %>
              <%= fa_icon('pencil') %>
            <% end %>
            <%= link_to employee, method: :delete, data: { confirm: '¿Seguro que desea eliminar el empleado?' }, class: 'btn btn-danger' do %>
              <%= fa_icon('trash') %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
    <% if @employees.empty? %>
      <tr>
        <td>
          No se encontraron registros
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to new_employee_path, class: 'btn btn-default' do %>
      <%= fa_icon('plus') %>
  <% end %>
</div>

<%= will_paginate @employees %>
